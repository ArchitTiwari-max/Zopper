import { NextResponse } from 'next/server'

export function middleware(request) {
  console.log('üö® MIDDLEWARE IS RUNNING for path:', request.nextUrl.pathname)
  
  const pathname = request.nextUrl.pathname
  
  // Block admin routes without accessToken
  if (pathname.startsWith('/admin')) {
    const accessToken = request.cookies.get('accessToken')
    console.log('üîê Checking admin access, token exists:', !!accessToken)
    
    if (!accessToken) {
      console.log('üõë BLOCKING ACCESS - REDIRECTING TO LOGIN')
      return NextResponse.redirect(new URL('/?redirect=' + pathname, request.url))
    }
    
    console.log('‚úÖ ACCESS GRANTED')
  }
  
  // Block executive routes without accessToken
  if (pathname.startsWith('/executive')) {
    const accessToken = request.cookies.get('accessToken')
    console.log('üîê Checking executive access, token exists:', !!accessToken)
    
    if (!accessToken) {
      console.log('üõë BLOCKING ACCESS - REDIRECTING TO LOGIN')
      return NextResponse.redirect(new URL('/?redirect=' + pathname, request.url))
    }
  }
  
  return NextResponse.next()
}

export const config = {
  matcher: [
    // Match admin and executive routes specifically
    '/admin/:path*',
    '/executive/:path*',
    '/',
  ],
};
